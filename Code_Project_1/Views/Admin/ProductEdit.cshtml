@using Code_Project_1.Models.ViewModels;
@model ProductDetailViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Edit Product</title>
</head>
<body>

    <div class="container">
        <h2>Edit Product</h2>
        <form asp-route="admin-product-edit-redirecter" method="POST">
            <div class="form-group">
                <label>Product Name:</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter product name" value="@Model.Name">
            </div>
            <div class="form-group">
                <label>Product Description:</label>
                <input asp-for="Description" type="text" class="form-control" placeholder="Enter product description" value="@Model.Description">
            </div>
            <div class="form-group">
                <label>Color:</label>
                <input asp-for="Color" type="text" class="form-control" placeholder="Enter product color" value="@Model.Color">
            </div>
            <div class="form-group">
                <label>Size:</label>
                <input asp-for="Size" type="text" class="form-control" placeholder="Enter product size" value="@Model.Size">
            </div>
            <div class="form-group">
                <label>Value:</label>
                <input asp-for="Value" type="text" class="form-control" placeholder="Enter product value" value="@Model.Value">
            </div>
            <div class="form-group">
                <label>Rating:</label>
                <input asp-for="Rating" type="text" class="form-control" placeholder="Enter product rating" value="@Model.Rating">
            </div>
            <div class="form-group">
                <label>Discount:</label>
                <input asp-for="Discount" type="text" class="form-control" placeholder="Enter product discount" value="@Model.Discount">
            </div>
            <div class="form-group">
                <label>Order Number:</label>
                <input asp-for="OrderNumber" type="text" class="form-control" placeholder="Enter product order-number" value="@Model.OrderNumber">
            </div>
            <div class="form-group">
                <label>URL:</label>
                <input asp-for="URL" type="text" class="form-control" placeholder="Enter product URL" value="@Model.URL">
            </div>
            <button type="submit" class="btn btn-primary">Update Product</button>
        </form>
    </div>

</body>
</html>